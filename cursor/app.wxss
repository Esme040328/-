/**app.wxss**/
page {
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Microsoft YaHei', sans-serif;
  background-color: #f5f5f5;
  color: #333;
  font-size: 28rpx;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 30rpx;
  height: 100%;
}

/* 按钮样式 */
.btn {
  width: 80%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 45rpx;
  margin: 20rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s;
}

.btn-primary {
  background-color: #3498db;
  color: white;
}

.btn-secondary {
  background-color: #f39c12;
  color: white;
}

.btn-success {
  background-color: #2ecc71;
  color: white;
}

/* 标题样式 */
.title {
  font-size: 60rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
}

.subtitle {
  font-size: 36rpx;
  color: #666;
  margin-bottom: 30rpx;
  text-align: center;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  width: 90%;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
} 
