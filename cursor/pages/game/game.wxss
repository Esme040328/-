/* pages/game/game.wxss */
.container {
  padding: 0;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.game-header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
}

.back-btn {
  font-size: 32rpx;
  color: #3498db;
  background-color: #fff;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.timer {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  background-color: #fff;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.pause-btn {
  font-size: 32rpx;
  color: #3498db;
  background-color: #fff;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.game-stats {
  display: flex;
  justify-content: space-around;
  width: 100%;
  padding: 20rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #3498db;
}

.word-container {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 50rpx 0;
}

.word {
  font-size: 80rpx;
  font-weight: bold;
  color: #333;
  background-color: #fff;
  padding: 40rpx 60rpx;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.1);
}

.action-area {
  width: 100%;
  height: 40vh;
  display: flex;
}

.correct-area {
  flex: 1;
  height: 100%;
  background: linear-gradient(to right, #2ecc71, #27ae60);
  display: flex;
  justify-content: center;
  align-items: center;
}

.skip-area {
  flex: 1;
  height: 100%;
  background: linear-gradient(to left, #f39c12, #e67e22);
  display: flex;
  justify-content: center;
  align-items: center;
}

.action-text {
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}