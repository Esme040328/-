/* pages/prepare/prepare.wxss */
.container {
  padding-top: 0;
}

.prepare-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
  color: #3498db;
}

.player-info {
  font-size: 32rpx;
  margin-bottom: 80rpx;
  background-color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.countdown {
  font-size: 160rpx;
  font-weight: bold;
  color: #f39c12;
  margin: 60rpx 0;
  width: 240rpx;
  height: 240rpx;
  line-height: 240rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #fff;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

.countdown.ready {
  font-size: 60rpx;
  color: #2ecc71;
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}

.rule-tips {
  margin-top: 60rpx;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  width: 80%;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.rule-tips view {
  text-align: center;
  padding: 10rpx 0;
  color: #666;
}