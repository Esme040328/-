/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.title {
  font-size: 80rpx;
  font-weight: bold;
  color: #3498db;
  text-shadow: 2rpx 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.btn-group {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.copyright {
  position: fixed;
  bottom: 30rpx;
  color: #999;
  font-size: 24rpx;
}
